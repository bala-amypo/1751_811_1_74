<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">

<suite name="DemoApplication Test Suite" verbose="1" parallel="false">

    <!-- Listeners -->
    <listeners>
        <listener class-name="com.example.demo.TestResultListener"/>
    </listeners>

    <!-- ========================= -->
    <!-- Main Test Configuration -->
    <!-- ========================= -->
    <test name="Demo Application Tests">

        <!-- Run tests by groups -->
        <groups>
            <run>
                <include name="servlet"/>
                <include name="crud"/>
                <include name="di"/>
                <include name="hibernate"/>
                <include name="jpa"/>
                <include name="manyToMany"/>
                <include name="security"/>
                <include name="hql"/>
            </run>
        </groups>

        <!-- Test Classes -->
        <classes>
            <class name="com.example.demo.DemoApplicationTests"/>
        </classes>

    </test>

</suite>
